@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";

<title>TÍNH TIỀN</title>
<meta http-equiv="content-type" content="text/html" charset="utf-8"/>
<script language="javascript">
    function CalculateTotal() {
        var df = parseFloat(document.getElementById("iPrice").value);
        var sl = parseFloat(document.getElementById("iQuantity").value);

        if (dg < 0) {
            document.getElementById("erPrice").value = "Đơn giá phải >=0";
        }
        if (sl < 1 || sl > 10) {
            document.getElementById("erQyabtity").value = "Số lượng phát trong khoảng[1,10";
        }
        else {
            document.getElementById("txtTotal").value = dg * sl;
        }
    }
</script>
    }
<body>
    NHẬP SỐ LƯỢNG VÀ ĐƠN GIÁ
    <form name="ShoppingCart" method="post">
        Đơn giá: <input type="number" id="iPrice" name="Price"
                        min="0"
                        onchange="CalculateTotal();"/>
                    <br/>
        <span id="errPrice" style="color:rebeccapurple"><</span>
         Số lượng <input type="number" id="iQuantity" name="Quantity"
                           min="1" max="10"
                         onchange="CalculateTotal();" />
                          <span id="errQuantity" style="color:rebeccapurple"><</span>
                       <br />

        Thành tiền:<input type="text" id="txtTotal" name="Total" readonly/>
    </form>
</body>

