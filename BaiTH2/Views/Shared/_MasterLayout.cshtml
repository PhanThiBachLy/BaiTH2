<style type="text/css">
    html{
        font-size:14px;
        font-family:'Franklin Gothic Medimum','Arial Narrow',
    }
    body{
        background-color:lightcyan;
    }
    #container{
        border:2px solid #000000;
        border-radius: 10px;
        
    }
    header{
        background-color: burlywood;
        border: 2px solid #000000;
        padding: 10px 20px;
        display:flex;
        justify-content:space-between;
        align-items:center; 
    }
   
    .logo img{
        height:50px;
    }
    nav ul {
        list-style-type:none;
        display:flex;
    }

    nav ul li{
        margin-left:20px;
        font-size:1.2rem;
    }
    nav ul li a{
        text-decoration: none;
        color:#000000;
        font-weight:bold;
    }
    section{
        background-color:whitesmoke;
        min-height: 300px;
    }
    .cart {
        position: relative;
        display: flex;
        align-items: center; 
    }

    .fa-shopping-cart {
        font-size: 20px;
        margin-right:5px;
        color:#000;
        transform: translateY(-3px);
    }

    .cart-text{
        font-size:1.2rem;
        color:#000;
    }
    .cart-count {
        position: absolute;
        top: -5px;
        right: -5px;
        background-color: red;
        color: white;
        font-size: 12px;
        padding: 2px 6px;
        border-radius: 50%;
        text-align:center;
    }
</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
    <div id="container">
       <header>
            <div class="logo">
                <img src="~/Content/phan-mem-thiet-ke-logo-online.jpg" />
            </div>
          

           
            <nav>
                <ul>

                    <li><a href="~/Home/Test">Trang chủ</a></li>
                    <li><a href="~/Product/ProductDetail">Sản phẩm</a></li>
                    <li><a href=" ~/Product/ShoppingCart">Giỏ hàng</a></li>
                    <div class="cart">
                        <a href="giohang.html">
                            <i class="fas fa-shopping-cart"></i>

                            <span class="cart-count">3</span>
                        </a>
                    </div>
                    <li><a href="~/Home/Contact">Liên hệ</a></li>
                </ul>
            </nav>
           </header>
        </div>
            <section>
                @RenderBody()
            </section>

         <footer>
                FOOTER
            </footer>
</body>
</html>
